      <input class="input-view"  placeholder='请输入商户编号' placeholder-class='placeholder-style' name="merchantNumber" type='text' value='{{merchantNumbe}}'></input>
    </view>
    <view class='describ-item' >
     <view style="width: 120px;"> <text style='color:blue'>用户编号:</text></view>
